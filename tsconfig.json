{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "lib": ["dom", "esnext"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "./build",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "plugins": [{
      "name": "typescript-plugin-css-modules"
    }],
    "types": ["reflect-metadata", "jest", "webpack-env"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "paths": {
    "*": ["*"]
  }
}
