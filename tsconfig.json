{
  "exclude": ["**/*.test.ts"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "paths": {
      "@data/*": ["data/*"],
      "@main/*": ["src/main/*"],
      "@lib/*": ["src/lib/*"],
      "@models/*": ["src/models/*"],
      "@png/*": ["png/*"]
    },
    "lib": ["dom", "esnext"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "./build",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "plugins": [],
    "types": ["vite/client", "vitest/globals", "node"]
  }
}
