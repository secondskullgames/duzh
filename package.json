{
  "name": "roguelike-js",
  "version": "0.1.0",
  "description": "A graphical Roguelike in the browser, written in Typescript",
  "dependencies": {
    "jszip": "^3.7.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "ajv": "^8.11.0",
    "copy-webpack-plugin": "^10.2.4",
    "css-loader": "^6.7.1",
    "file-loader": "^6.2.0",
    "json-schema-to-typescript": "^10.1.5",
    "rimraf": "^3.0.2",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.2.8",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3",
    "webpack": "^5.71.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.4.0"
  },
  "scripts": {
    "gen-schema": "npx json2ts -i \"data/schema/*.schema.json\" -o src/gen-schema --cwd=./data/schema",
    "prebuild": "npm run gen-schema",
    "build": "npx webpack",
    "preserve": "npm run gen-schema",
    "serve": "npx webpack serve",
    "clean": "npx rimraf build && npx rimraf src/gen-schema",
    "validate": "node --loader ts-node/esm scripts/validate.ts",
    "test": "npm run validate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jwbutler/roguelike-js.git"
  },
  "author": "jwbutler",
  "license": "ISC",
  "type": "module"
}
