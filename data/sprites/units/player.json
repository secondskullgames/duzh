{
  "$schema": "../../../src/gen-schema/DynamicSpriteModel.schema.json",
  "name": "player",
  "offsets": {
    "dx": -4,
    "dy": -20
  },
  "pattern": "${sprite}_${activity}_${direction}_${number}",
  "animations": {
    "standing": {
      "frames": [{
        "activity": "standing",
        "number": "1"
      }]
    },
    "walking": {
      "frames": [{
        "activity": "walking",
        "number": "1"
      }]
    },
    "attacking": {
      "frames": [{
        "activity": "attacking",
        "number": "2"
      }]
    },
    "shooting": {
      "frames": [{
        "activity": "attacking",
        "number": "2"
      }]
    },
    "damaged": {
      "frames": [{
        "activity": "standing",
        "number": "1"
      }]
    },
    "stunned": {
      "frames": [{
        "activity": "standing",
        "number": "1"
      }]
    },
    "burning": {
      "frames": [{
        "activity": "standing",
        "number": "1"
      }]
    },
    "frozen": {
      "frames": [{
        "activity": "standing",
        "number": "1"
      }]
    },
    "shocked": {
      "frames": [{
        "activity": "standing",
        "number": "1"
      }]
    }
  }
}