{
  "name": "@duzh/graphics",
  "version": "0.1.0",
  "type": "module",
  "files": [
    "build"
  ],
  "exports": {
    ".": {
      "import": "./build/index.js",
      "types": "./build/index.d.ts"
    },
    "./images": {
      "import": "./build/images/index.js",
      "types": "./build/images/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "clean": "rimraf build",
    "lint": "prettier --write ./src"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "globals": "catalog:",
    "prettier": "catalog:",
    "rimraf": "catalog:",
    "tsx": "catalog:tsx",
    "typescript": "catalog:typescript",
    "vitest": "catalog:vitest"
  },
  "dependencies": {
    "@duzh/assets": "workspace:*",
    "@duzh/geometry": "workspace:*",
    "@duzh/utils": "workspace:*",
    "glob": "catalog:",
    "zod": "catalog:zod"
  }
}
