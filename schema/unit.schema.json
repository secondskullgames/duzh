{
  "$id": "unit.schema.json",
  "title": "UnitModel",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Expected to match the filename"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name for this unit type"
    },
    "abilities": {
      "type": "object",
      "description": "TODO: This includes ATTACK at position 0, followed by special abilities.\nIt doesn't include SHOOT_ARROW.",
      "patternProperties": {
        "^[0-9]+$": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "aiParameters": {
      "type": "object",
      "properties": {
        "aggressiveness": {
          "description": "currently unused",
          "type": "number"
        },
        "fleeThreshold": {
          "description": "ratio of (current life / max life)",
          "type": "number"
        },
        "speed": {
          "description": "between 0 and 1",
          "type": "number"
        },
        "visionRange": {
          "description": "whole number of tiles",
          "type": "number"
        }
      },
      "required": [
        "aggressiveness",
        "fleeThreshold",
        "speed",
        "visionRange"
      ]
    },
    "equipment": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "damage": {
      "type": "number"
    },
    "level": {
      "type": ["number", "null"],
      "description": "null if this should not be randomly placed as an enemy"
    },
    "life": {
      "type": "number"
    },
    "mana": {
      "type": "number"
    },
    "paletteSwaps": {
      "$ref": "./palette-swaps.schema.json"
    },
    "points": {
      "type": ["number", "null"]
    },
    "sprite": {
      "type": "string"
    },
    "summonedUnitClass": {
      "type": "string"
    },
    "type": {
      "type": "string"
    }
  },
  "required": [
    "abilities",
    "damage",
    "id",
    "level",
    "life",
    "mana",
    "name",
    "paletteSwaps",
    "points",
    "sprite",
    "type"
  ],
  "additionalProperties": false
}
