{
  "$id": "predefined-map.schema.json",
  "title": "PredefinedMapModel",
  "type": "object",
  "properties": {
    "imageFilename": {
      "type": "string"
    },
    "levelNumber": {
      "type": "number"
    },
    "music": {
      "type": "string"
    },
    "startingPointColor": {
      "$ref": "#/definitions/Color"
    },
    "tileColors": {
      "$ref": "#/definitions/TileMap"
    },
    "enemyColors": {
      "$ref": "#/definitions/ColorMap"
    },
    "equipmentColors": {
      "$ref": "#/definitions/ColorMap"
    },
    "itemColors": {
      "$ref": "#/definitions/ColorMap"
    },
    "doorColors": {
      "$ref": "#/definitions/DoorMap"
    },
    "spawnerColors": {
      "$ref": "#/definitions/ColorMap"
    },
    "defaultTile": {
      "$ref": "./tile-type.schema.json"
    },
    "tileset": {
      "type": "string"
    }
  },
  "required": [
    "enemyColors",
    "equipmentColors",
    "imageFilename",
    "itemColors",
    "levelNumber",
    "startingPointColor",
    "tileColors",
    "tileset"
  ],
  "additionalProperties": false,
  "definitions": {
    "Color": {
      "title": "PredefinedMapModel_Color",
      "type": "string",
      "pattern": "^[A-Z_]+$"
    },
    "ColorMap": {
      "title": "PredefinedMapModel_ColorMap",
      "type": "object",
      "patternProperties": {
        "^[A-Z_]+$": {
          "type": "string"
        }
      }
    },
    "DoorMap": {
      "title": "PredefinedMapModel_DoorMap",
      "type": "object",
      "patternProperties": {
        "^[A-Z_]+$": {
          "$ref": "./door-direction.schema.json"
        }
      }
    },
    "TileMap": {
      "title": "PredefinedMapModel_TileMap",
      "type": "object",
      "patternProperties": {
        "^[A-Z_]+$": {
          "$ref": "./tile-type.schema.json"
        }
      }
    }
  }
}
